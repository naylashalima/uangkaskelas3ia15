<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/btnShowPaymentNotification"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/rounded_button"
        android:centercolor="#1D86A7FC"
        android:drawablePadding="8dp"
        android:fontFamily="times"
        android:text="Pembayaran Kas bulan ini belum lunas, Silahkan melunasi pembayaran!"
        android:textColor="@color/white"
        android:gravity="center" />
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btnCLoseShowPaymentNotification"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/rounded_button"
        android:centercolor="#1D86A7FC"  android:drawablePadding="8dp"
        android:fontFamily="times"
        android:text="Bayar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btnCloseShowPaymentNotification"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="260dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/rounded_close_button"
        android:drawablePadding="8dp"
        android:fontFamily="times"
        android:text="x" />


</RelativeLayout>